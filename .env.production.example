# =============================================
# Festivalim CRM - Production Environment
# =============================================
# Copy this file to .env.production and fill in the values
# NEVER commit .env.production to git!
# =============================================

# ==================
# Application
# ==================
NODE_ENV=production
APP_VERSION=2.0.0
SITE_URL=https://crm.festivalim.ru
API_EXTERNAL_URL=https://crm.festivalim.ru

# ==================
# PostgreSQL Database
# ==================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=YOUR_STRONG_PASSWORD_HERE_32_CHARS
POSTGRES_DB=festivalim

# ==================
# Supabase Configuration
# ==================
# Generate these keys using: https://supabase.com/docs/guides/self-hosting/docker#generate-api-keys
# Or use: openssl rand -base64 32

# JWT Secret (32+ chars, keep secret!)
JWT_SECRET=your-super-secret-jwt-key-at-least-32-characters-long

# JWT Expiry in seconds (3600 = 1 hour)
JWT_EXPIRY=3600

# Anon Key (public, safe to expose in frontend)
# Generate with your JWT secret at: https://supabase.com/docs/guides/self-hosting
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Service Role Key (secret, never expose!)
SUPABASE_SERVICE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Public Supabase URL (for frontend)
NEXT_PUBLIC_SUPABASE_URL=https://crm.festivalim.ru/supabase
SUPABASE_PUBLIC_URL=https://crm.festivalim.ru/supabase

# ==================
# Realtime Configuration
# ==================
# Generate with: openssl rand -base64 64
REALTIME_ENC_KEY=your-realtime-encryption-key
REALTIME_SECRET_KEY_BASE=your-very-long-secret-key-base-at-least-64-characters-for-realtime-service

# ==================
# Email Configuration (SMTP)
# ==================
SMTP_HOST=smtp.yandex.ru
SMTP_PORT=587
SMTP_USER=noreply@festivalim.ru
SMTP_PASS=your-smtp-password
SMTP_ADMIN_EMAIL=admin@festivalim.ru

# Email settings
ENABLE_EMAIL_SIGNUP=true
ENABLE_EMAIL_AUTOCONFIRM=false
DISABLE_SIGNUP=false

# ==================
# UIS (IP Telephony)
# ==================
UIS_API_KEY=your-uis-api-key
UIS_VIRTUAL_PHONE=74951234567

# ==================
# WhatsApp API
# ==================
WHATSAPP_API_URL=https://api.whatsapp.com
WHATSAPP_API_TOKEN=your-whatsapp-token
WHATSAPP_PHONE_ID=your-phone-id

# ==================
# Backup Configuration (Optional)
# ==================
S3_BACKUP_BUCKET=festivalim-backups
AWS_ACCESS_KEY_ID=your-aws-key
AWS_SECRET_ACCESS_KEY=your-aws-secret
AWS_DEFAULT_REGION=ru-central1

# ==================
# Monitoring (Optional)
# ==================
SENTRY_DSN=https://xxx@sentry.io/xxx
